{
  "name": "boilerplate-angular-webpack",
  "version": "1.0.0",
  "description": "A boilerplate to code webapps based on AngularJS using ES6, SCSS and webpack. Including deployment and test scripts",
  "scripts": {
    "clean": "rimraf dist",
    "lint:css": "stylelint ./src/styles/**/*.scss",
    "lint:js": "eslint ./src/",
    "lint": "npm run lint:css & npm run lint:js",
    "fix:css": "stylelint --fix ./src/styles/**/*.scss",
    "fix:js": "eslint --fix ./src/",
    "fix": "npm run fix:css & npm run fix:js",
    "build": "npm run clean && webpack --config ./webpack/prod.config.babel.js",
    "build:dev": "npm run build && http-server dist/",
    "server": "babel-node ./webpack/dev-server.js",
    "test": "babel-node ./node_modules/karma/bin/karma start",
    "test-watch": "babel-node ./node_modules/karma/bin/karma start --auto-watch --no-single-run",
    "start": "npm run server"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lordfido/boilerplate-angular-webpack.git"
  },
  "author": "Rafael Pérez García",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lordfido/boilerplate-angular-webpack/issues"
  },
  "homepage": "https://github.com/lordfido/boilerplate-angular-webpack",
  "dependencies": {
    "@uirouter/angularjs": "^1.0.6",
    "angular": "^1.6.6",
    "bootstrap": "^4.0.0-beta",
    "jquery": "^3.2.1",
    "popper.js": "^1.12.5"
  },
  "devDependencies": {
    "angular-mocks": "^1.5.0",
    "autoprefixer": "^6.0.3",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "copy-webpack-plugin": "4.0.1",
    "css-loader": "^0.26.4",
    "debug": "^3.0.1",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.7.1",
    "http-server": "^0.10.0",
    "image-webpack-loader": "^3.4.2",
    "istanbul-instrumenter-loader": "^1.2.0",
    "jasmine-core": "^2.8.0",
    "karma": "^1.7.1",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.31",
    "karma-webpack": "^2.0.4",
    "loader-utils": "^1.1.0",
    "ncp": "^2.0.0",
    "node-libs-browser": "2.0.0",
    "node-sass": "^4.5.3",
    "node-sass-json-importer": "^3.0.2",
    "null-loader": "^0.1.1",
    "phantomjs-prebuilt": "^2.1.4",
    "postcss-loader": "^1.3.3",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.13.2",
    "stylelint": "^8.1.1",
    "stylelint-config-recommended": "^1.0.0",
    "stylelint-config-standard": "^17.0.0",
    "webpack": "^3.6.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-dev-server": "2.2.0",
    "webpack-hot-middleware": "^2.19.1"
  }
}
